<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <LinearLayout
        android:id="@+id/ldjsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/podajMiasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/podajMiasto" />

        <EditText
            android:id="@+id/lokacjaET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="@string/podajMiasto" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:onClick="doPogody"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/toSports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="doSportow"
            android:text="@string/toSports" />
    </LinearLayout>

</ScrollView>